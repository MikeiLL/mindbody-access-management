{
  "name": "mikeill/mz-mbo-access",
	"description": "Grant Client Access Based on Mindbody Online API Credentials",
	"keywords": [
    "MBO",
    "mindbody",
    "wordpress",
    "plugin",
    "session"
  ],
  "prefer-stable": true,
	"homepage": "https://github.com/MikeiLL/mz-mbo-access",
	"license"          : "GPL-2.0-or-later",
	"minimum-stability": "dev",
	"authors": [
    {
      "name": "Mike iLL Kilmer",
      "email": "mike@mzoo.org",
      "homepage": "http://mzoo.org",
      "role": "Developer"
    }
  ],
	"type": "wordpress-plugin",
	"scripts": {
		"lint": [
		  "phpcs --extensions=php src *.php"
		],
    "fix": ["phpcbf --extensions=php src *.php"],
    "post-install-cmd": [
        "\"vendor/bin/mozart\" compose"
    ],
    "post-update-cmd": [
      "\"vendor/bin/mozart\" compose"
    ]
	},
  "require": {
		"php": ">=7.1",
		"ericmann/sessionz": "^0.3",
		"ericmann/wp-session-manager": "*",
    "htmlburger/carbon-fields": "*"
  },
  "repositories": [
    {
      "url": "https://github.com/brianhenryie/mozart",
      "type": "git"
    },
    {
      "url": "https://github.com/ericmann/wp-session-manager",
      "type": "git"
    }
  ],
  "require-dev":{
    "coenjacobs/mozart": "dev-rewrite",
		"squizlabs/php_codesniffer": "*",
		"wp-coding-standards/wpcs": "*"
  },
	"autoload": {
		"psr-4": {
			"MZoo\\MzMboAccess\\": "src"
		}
	},
  "extra": {
    "mozart":{
      "dep_namespace": "MZoo\\MzMboAccess\\Dependencies\\",
      "dep_directory": "/src/Mozart/",
      "packages": [
        "htmlburger/carbon-fields",
        "ericmann/wp-session-manager",
        "ericmann/sessionz"
      ],
      "delete_vendor_directories": false,
      "override_autoload": {
        "htmlburger/carbon-fields": {
          "psr-4": {
            "Carbon_Fields\\": "core/"
          },
          "files": [
            "config.php",
            "templates",
            "assets",
            "build"
          ]
        }
      }
    }
  }
}